---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  target?: "_blank" | "_parent" | "_self" | "_top";
}

const {
  href,
  className = "",
  ariaLabel,
  title,
  disabled = false,
  target = "_self",
} = Astro.props;
---

{
  disabled ? (
    <span
      class:list={["group inline-block", className]}
      title={title}
      aria-disabled={disabled}
    >
      <slot />
    </span>
  ) : (
    <a
      {href}
      class:list={["group inline-block hover:text-skin-accent", className]}
      aria-label={ariaLabel}
      title={title}
      target={target}
    >
      <slot />
    </a>
  )
}
