---
import type { Work } from "@assets/worksData";
import LinkButton from "./LinkButton.astro";

interface Props {
  work: Work;
}
const { work } = Astro.props;
---

<li class="workcard">
  <div class="flex h-full max-w-full flex-col rounded-lg shadow sm:max-w-sm">
    <a href={work.href} target="_blank">
      <img
        src={`/assets/img/works/${work.title}.png`}
        alt={work.title}
        class="rounded-t-lg"
      />
    </a>
    <div class="flex flex-grow flex-col p-5">
      <a href={work.href} class="w-fit" target="_blank">
        <h5
          class="mb-2 w-fit text-2xl font-bold tracking-tight text-skin-accent decoration-dashed hover:underline"
        >
          {work.title}
        </h5>
      </a>
      <p class="mb-5 grow font-normal">
        {work.description}
      </p>
      <LinkButton href={work.href} target="_blank" className={"w-fit"}>
        Read more
        <svg xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
          ></path>
        </svg>
      </LinkButton>
    </div>
  </div>
</li>

<style>
  img {
    filter: url(#squiggle);
  }
</style>
